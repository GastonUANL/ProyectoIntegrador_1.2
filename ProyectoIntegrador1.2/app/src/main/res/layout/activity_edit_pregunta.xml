<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context=".EditPregunta"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_back_Admins"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_logout"
        android:layout_weight="1"
        android:onClick="back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="50"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pregunta:"
                android:textColor="#DCDCDC"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/txt_Pregunta_EditP"
                android:layout_width="256dp"
                android:layout_height="41dp"
                android:textColor="#DCDCDC"
                android:ems="10"
                android:hint="Ejemplo: ¿Qué día es hoy?"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/txt_Titulo_VistaNt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta:"
                android:textColor="#DCDCDC"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/txt_Respuesta_EditP"
                android:layout_width="256dp"
                android:layout_height="41dp"
                android:textColor="#DCDCDC"
                android:ems="10"
                android:hint="Ejemplo: Viernes!"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_btnsEditPreg"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btn_Guardar_EditP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:onClick="guardarP"
            android:text="Guardar"
            android:textColor="#3C3C3C"
            app:backgroundTint="#DADADA" />

    </LinearLayout>

</LinearLayout>